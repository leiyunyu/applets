page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.head{
  width: 100%;
  height: 300rpx;
}
.swiper-item{
  width: 100%;
  height: 100%;
  background: #F08080;
  text-align: center;
  line-height: 300rpx;
}
.shoplist{
  width: 100%;
  height: 320rpx;
  background: #FFC0CB;
  display: flex;
  flex-wrap: wrap;
  
}
.shop-item{
  width: 25%;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.shop-img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.shop-text{
  font-size: 30rpx;
}
.progress{
  width: 100%;
  height: 160rpx;
  background: 	#FFE4E1;
}
.progress-text{
  font-size: 30rpx;
  color: #87CEEB;
}
.progess-di{
  padding:20rpx 30rpx;
}
.form{
  width: 100%;
  height: 600rpx;
  background: #FFF0F5;
}
.checkbox-item{
  padding:0 18rpx;
  font-size:30rpx;
  color: #87CEEB;
}
.form-input{
  width: 80%;
  margin-top: 10rpx;
  margin-left: 20rpx;
  border: 1px solid	#D6D6D6;
  padding:10rpx 20rpx;
}
.form-textarea{
  width: 80%;
  height: 120rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
  border: 1px solid	#D6D6D6;
  padding:10rpx 20rpx;
}
